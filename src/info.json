{
  "identifier": "yetone.openai.translator",
  "version": "0.4.0",
  "category": "translate",
  "name": "OpenAI Translator",
  "summary": "GPT powered translator",
  "icon": "",
  "author": "yetone <yetoneful@gmail.com>",
  "homepage": "https://github.com/yetone/bob-plugin-openai-translator",
